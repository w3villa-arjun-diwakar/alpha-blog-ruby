<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
            <%= render "shared/errors" %>
            <%= form_with(model:@article, class:"shadow p-5 mb-3 bg-info rounded", local: true) do |f| %>
                <div class="form-group row">
                    <%= f.label :title, class:"col-2 col-form-label text-light" %>
                    <div  class="col-10">
                    <%= f.text_field :title, class:"form-control", placeholder:"Article Title" %> 
                    </div>
                </div><br>
                <div class="form-group row">
                    <%= f.label :description, class:"col-2 col-form-label text-light" %>
                    <div  class="col-10">
                    <%= f.text_area :description, rows:10,class:"form-control" , placeholder:"Write your article here!"%>
                    </div>
                </div>
                <p>
                <div class="form-group row justify-content-center">
                <%= f.submit class:"btn btn-outline-light btn-lg ", style:"width: fit-content; "%>
                </p>
                </div>
                
                
            <% end %>
                      <%= link_to '[Back to articles listing]', articles_path, class:"text-info" %>
        </div>
    </div>
</div>