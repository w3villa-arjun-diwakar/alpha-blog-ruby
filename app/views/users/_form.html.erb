<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
            <%= render "shared/errors",obj: @user  %>
            <%= form_with(model:@user, class:"shadow p-5 mb-3 bg-info rounded", local: true) do |f| %>
                <div class="form-group row">
                    <%= f.label :Username, class:"col-2 col-form-label text-light" %>
                    <div  class="col-10">
                    <%= f.text_field :username, class:"form-control", placeholder:"Enter an username" %> 
                    </div>
                </div><br>
                <div class="form-group row">
                    <%= f.label :Email, class:"col-2 col-form-label text-light" %>
                    <div  class="col-10">
                    <%= f.email_field :email, class:"form-control" , placeholder:"Write your email"%>
                    </div>
                </div><br>
                <div class="form-group row">
                    <%= f.label :Password, class:"col-2 col-form-label text-light" %>
                    <div  class="col-10">
                    <%= f.password_field :password, class:"form-control" , placeholder:"Write password"%>
                    </div>
                </div>
                <p>
                <div class="form-group row justify-content-center">
                <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class:"btn btn-outline-light btn-lg ", style:"width: fit-content; ")%>
                </p>
                </div>
                
                
                
            <% end %>
                      <%= link_to '[Back to articles listing]', articles_path, class:"text-info" %>
        </div>
    </div>
</div>