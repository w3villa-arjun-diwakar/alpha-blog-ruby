<h1 class="text-center">Categories </h1>


<div class="container">
    <% @categories.each do |category| %>
    <div class="row justify-content-md-center">
        <div class="col-4 mt-4 ">
            <div class="card text-center shadow mb-5 bg-body-tertiary rounded">
                <div class="card-body">
                    <h5 class="card-title text-success"><%= link_to category.name , category_path(category)%></h5>
                     <h5 class="card-title"><%= pluralize(category.articles.count ,"Article") %></h5>
                </div>
                <div class="card-footer text-muted">
                    <small>Created <%=time_ago_in_words(category.created_at)%> ago, edited <%=time_ago_in_words(category.updated_at)%> ago</small>
                </div>
            </div>
        </div>
    </div>
    <% end %>
    
</div>


<div class="flickr_pagination ">
    <%= will_paginate @categories, :container => false %>
</div>
