<h1 class="text-center">Create a new category</h1>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
            <%= render "shared/errors",obj: @category  %>
            <%= form_with(model:@category, class:"shadow p-5 mb-3 bg-info rounded", local: true) do |f| %>
                <div class="form-group row">
                    <%= f.label :Name,"Category Name", class:"col-2 col-form-label text-light" %>
                    <div  class="col-10">
                    <%= f.text_field :name, class:"form-control", placeholder:"Enter a name" %> 
                    </div>
                </div><br>
                <p>
                <div class="form-group row justify-content-center">
                <%= f.submit class:"btn btn-outline-light btn-lg ", style:"width: fit-content; "%>
                </p>
                </div>
                
                
                
            <% end %>
                      <%= link_to '[Back to articles listing]', articles_path, class:"text-info" %>
        </div>
    </div>
</div>
